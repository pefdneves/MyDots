<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/defaultBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultSubtitle">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaultText">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DefaultTitle">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultDetailText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultCheckBox">
        <item name="android:buttonTint">@color/defaultBlue</item>
    </style>

</resources>
